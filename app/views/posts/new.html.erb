<div class="background-image-container">
  <div class="row"> 
    <div class="col-md-offset-4 col-md-4">
      <h3 class="text-center text-white">口コミ投稿</h3>
      <%= form_with(model: [@shop, @post]) do |f| %>
        <div class="form-group">
          <%= f.label :"タイトル", class:"text-white" %>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group" id="star">
          <%= f.label :"評価", class:"text-white" %>
          <%= f.hidden_field :rate, id: :review_star %>
        </div>
        <div class="form-group">
          <%= f.label :"口コミ", class:"text-white" %>
          <%= f.text_area :description, class:"form-control", :size=>"50x7" %>
        </div>
          <%= f.hidden_field :shop_id, value: @shop.id %>
          <%= f.hidden_field :user_id, value: @user.id %>
        <%= f.submit "登録する！", class:"btn btn-success form-control"  %>
      <% end %>
      <script>
        $('#star').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          scoreName: 'post[rate]',
          half: true,
        });
        </script> 
    </div>  
  </div>
</div>