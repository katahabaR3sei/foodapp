<div class="container">
  <div class="row"> 
    <h3 class="text-center">みんなの選んだお店一覧</h3>
      <% @topics.each do |topic| %>
        <div class="row"> 
          <div class="col-md-7 col-md-offset-3 bg-success text-center ">
           <%= topic.store_name %>
          </div> 
        </div>  
        <div class="row"> 
          <div class="col-md-7 col-md-offset-3">
            <%= image_tag topic.image.url, class:"img-responsive center-block"%>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3 col-md-offset-3 bg-primary">
           <%= topic.title %>
          </div>
        </div>  
        <div class="row">
          <div class="col-md-3 col-md-offset-3 bg-danger">
            <%= topic.genre%>
          </div>
        </div>
        <div class="row">
          <div class="col-md-7 col-md-offset-3 bg-warning">
            <%= topic.description%>
          </div>
        </div>
      <% end %>    
  </div>      
</div>
      