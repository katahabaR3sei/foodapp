<div class="col-md-3">
      <%= image_tag @shop.image.url, class:"img-responsive center-block"%>
    </div>
    <div class="col-md-9 post-text">
      <div class="col-md-2 text-center post-parts">
        店舗名
      </div>
      <div class="col-md-10 text-center post-parts">
        <%= @shop.name%>
      </div>
      <div class="col-md-2 text-center post-parts">
        料理ジャンル
      </div>
      <div class="col-md-10 text-center post-parts">
        <%= @shop.genre.name%>
      </div>
      <div class="col-md-2 text-center post-parts">
        キャッチコピー
      </div>
      <div class="col-md-10 text-center post-parts">
        <%= @shop.title%>
      </div>
      <div class="col-md-2 text-center post-parts">
        地域
      </div>
      <div class="col-md-10 text-center post-parts">
        <%= @shop.address.prefectures%>
      </div>
      <div class="col-md-2 text-center post-parts">
        平均単価
      </div>
      <div class="col-md-10 text-center post-parts">
        <%= @shop.pricerange.price%>
      </div>
      <div class="col-md-12 bg-primary post-parts">
      <クチコミ件数>
      </div>
      <div class="col-md-12 bg-primary post-parts">
        <クチコミ平均点>
      </div>
    </div>  
  </div>
  <div class="col-md-12 description-text border">
    <%= @shop.description %>
  </div>  
</div>
  <div class="col-md-12 text-center h1 bg-info">
    みんなのクチコミ
  </div> 
  <% @shop.posts.each do |p|%>
    <div class="row row-eq-height posts-show balloon4">
      <div class="col-md-4">
        <%= image_tag p.user.image.url, class:"img center-block"%>
      </div>
      <div class="col-md-8  ">  
        <h4 class="md-4">評価：<%= p.rate %>点 | <%= p.title %></h4>
          <!--星評価-->
        <div id="star-rate-<%= p.id %>"></div>
          <script>
          $('#star-rate-<%= p.id %>').raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,
            readOnly: true,
            score: <%= p.rate %>,
          });
          </script>
        <div class="col-md-12">
          <p class="font-weight-bold">料理やメニューに関して</p>
        </div> 
        <div class="col-md-12"> 
          <%= p.taste%>  
        </div>
        <div class="col-md-12">
          <p class="font-weight-bold">店内の雰囲気や装飾に関して</p>
        </div> 
        <div class="col-md-12"> 
          <%= p.atmosphere%>
        </div>
        <div class="col-md-12">
          <p class="font-weight-bold">接客やその他サービスに関して</p>
        </div> 
        <div class="col-md-12">   
          <%= p.service%>
        </div>  
        <% if current_user && current_user.id == p.user.id%>
          <div class="col-md-3  btn btn-success">   
            <%= link_to "クチコミ編集", edit_shop_post_path(p)%>
          </div> 
          <div class="col-md-3 col-md-offset-2 btn btn-warning">   
            <%= link_to "クチコミ削除", shop_post_path(p), method: :delete, data: {confirm: "本当に削除しますか？"} %>
          </div> 
        <% else %>
        <% end %>
      </div> 
    </div>   
  <% end %> 