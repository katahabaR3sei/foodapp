<div class="container">
  <div class="row"> 
    <div class="col-md-offset-4 col-md-4 users-new-container">
      <h3 class="text-center text-white">プロフィール</h3>
        <div class="form-group">
          <% if @user.image%>
            <%= image_tag @user.image.url, class:"img-responsive center-block" %>
          <% else %>
            <%= image_tag "noimage.png", class:"img-responsive center-block" %> 
          <% end %>   
        </div>
        <div class="form-group">
          名前：
          <%= @user.name%>
        </div>
        <div class="form-group">
          メールアドレス：
          <%= @user.email%>
        </div>
        <div class="form-group">
          年齢：
          <%= @user.age%>歳
        </div>
        <div class="form-group">
          性別：
          <%= @user.sex%>
        </div>
        <div class="form-group">
          現住地：
          <%= @user.address.prefectures%>
        </div>
        <div class="form-group">
          <%= link_to "プロフィール編集", edit_user_path(current_user)%>
        </div>
    </div>  
  </div>
</div>