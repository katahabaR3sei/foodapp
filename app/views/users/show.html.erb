<div class="container">
  <div class="row row-eq-height bg-info"> 
    <div class="col-md-12">
      <h1 class="text-center">プロフィール</h1>
    </div>  
    <div class="col-md-offset-1 col-md-4">
      <% if @user.image%>
        <%= image_tag @user.image.url, class:"img-responsive center-block" %>
      <% else %>
        <%= image_tag "noimage.png", class:"img-responsive center-block" %> 
      <% end %>
    </div>
    <div class="col-md-offset-1 col-md-6">
      <div class="form-group profile-text">
        名前：
        <%= @user.name%>
      </div>
      <div class="form-group profile-text">
        メールアドレス：
        <%= @user.email%>
      </div>
      <div class="form-group profile-text">
        年齢：
        <%= @user.age%>代
      </div>
      <div class="form-group profile-text">
        性別：
        <%= @user.sex%>
      </div>
      <div class="form-group profile-text">
        地域：
        <%= @user.address.prefectures%>
      </div>
      <div class="form-group profile-text">
        <%= link_to "プロフィール編集", edit_user_path(current_user)%>
      </div> 
    </div>  
  </div>
</div>