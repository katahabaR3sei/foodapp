<div class="background-image-container">
  <div class="row"> 
    <div class="col-md-offset-4 col-md-4 users-new-container">
      <h3 class="text-center text-white">プロフィール編集</h3>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :"名前", class:"text-white" %>
          <%= f.text_field :name, class:"form-control",  placeholder:"名前を入力(15文字まで)" %>
        </div>
        <div class="form-group">
          <%= f.label :"Email", class:"text-white" %>
          <%= f.text_field :email, class:"form-control",  placeholder:"メールアドレスを入力" %>
        </div>
        <div class="form-group">
          <%= f.label :"性別", class:"text-white" %>
          <%= f.select :sex,[["男性","男性"],["女性","女性"]], class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :"年齢", class:"text-white" %>
          <%= f.select :age,[["10代","10代"],["20代","20代"],["30代","30代"],["40代","40代"],["50代","50代"],["60代","60代"],["70代","70代"],["80代","80代"]], class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :"都道府県", class:"text-white" %>
          <%= f.collection_select :address_id, Address.all, :id, :prefectures, :prompt => "選択してください", class:"form-control"%>
        </div>
        <div class="form-group">
          <%= f.label :"画像", class:"text-white" %>
          <%= f.file_field :image, :size=>"10x20", class:"text-white" %>
        </div>
        <div class="form-group">
          <%= f.label :"パスワード入力", class:"text-white" %>
          <%= f.password_field :password, class:"form-control",  placeholder:"パスワード(数字とアルファベットを1文字以上)※8~32文字の間で設定" %>
        </div>
        <div class="form-group">
          <%= f.label :"パスワード確認", class:"text-white" %>
          <%= f.password_field :password_confirmation, class:"form-control", placeholder:"パスワード確認用" %>
        </div>
        <%= f.submit "登録", class:"btn btn-success form-control" %>
      <% end %>
      <%= link_to "登録済みの方はこちらからログイン画面へ！", login_path, class: "text-white" %>
    </div>  
  </div>
</div>