<div class="user-form-container">
  <h3 class="text-center">新規登録</h3>
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :"名前", class:"text" %>
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :"Email", class:"text" %>
      <%= f.text_field :email, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :"パスワード入力", class:"text" %>
      <%= f.text_field :password, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :"パスワード確認", class:"text" %>
      <%= f.text_field :password, class:"form-control" %>
    </div>
    <%= f.submit "登録", class:"btn" %>
  <% end %>
  <%= link_to "登録済みに方はこちらからログイン画面へ！", "#", class:"link"%>
  </div>
</div>